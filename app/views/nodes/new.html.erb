<% provide(:title, 'Sign up') %>

<h1>Add Node</h1>

<div class="row">
  <div class="span6 offset3">
    
    <%= form_for(@node) do |f| %>
    
    <%= render 'shared/error_messages' %>
    
      <%= f.label :ip%>
      <%= f.text_field :ip%>
      
      <%= f.label :username%>
      <%= f.text_field :username%>
      
      <%= f.label :password%>
      <%= f.password_field :password%>
      <%= f.label :Uploadkey %>
      <%= f.file_field :key %>
      
      <%= f.submit "Save Node Details", class: "btn btn-large btn-primary" %>
      <%= f.submit "Cancel", class:"btn btn-large btn-primary" %>
    <% end %>    
</div>
</div>
